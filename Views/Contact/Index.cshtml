@model List<Contact>
@{
  ViewData["Title"] = "Contact Index";
}
<div class="container row m-1">
  <a class="btn btn-outline-primary col-2" asp-controller="Contact" asp-action="Create">New Contact</a>
  <div class="col-10">
    <partial  name="Search"/>
  </div>
</div>
<h4>Contact List</h4>
<div class="container">
  <table class="table table-striped table-bordered table-sm">
    <thead>
      <tr>
        <th>Contact Name</th>
        <th>Phone</th>
        <th>Contact Type</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
          <tr>
            <td>@item.ContactName</td>
            <td>@item.Phone</td>
            <td>@item.ContactType</td>
            <td>@item.Email</td>
            <td>
              <div class="row container">
                <a class="btn btn-outline-success col-4" asp-controller="Contact" asp-action="Edit" asp-route-contactName="@item.ContactName" asp-route-phone="@item.Phone">Edit</a>
              <form class="col-6" method="Post" asp-controller="Contact" asp-action="Delete" asp-antiforgery="true">
                <input name="contactName" type="hidden" value="@item.ContactName"/>
                <input name="phone" type="hidden" value="@item.Phone"/>
                <input class="btn btn-outline-danger" type="submit" value="Delete"/>
              </form>              
              </div>
            </td>
          </tr>
      }
    </tbody>
  </table>
</div>